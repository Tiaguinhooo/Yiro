<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Sell a Product</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        color: white;
        background: white url('/Images/background.png') no-repeat center center fixed;
        background-size: cover;
        min-height: 100vh;
      }

      nav {
        position: sticky;
        top: 0;
        background: #f0f0f0;
        padding: 10px 20px;
        border-bottom: 1px solid #ccc;
        color: #333;
        display: flex;
        justify-content: space-between;
        align-items: center;
        z-index: 1000;
      }

      nav div p {
        margin: 0;
        font-weight: bold;
        font-size: 1.1rem;
      }

      nav ul {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        align-items: center;
      }

      nav ul li {
        position: relative;
        margin-left: 20px;
      }

      nav ul li a {
        color: #333;
        text-decoration: none;
        font-weight: 600;
        padding: 6px 8px;
        display: inline-block;
        transition: color 0.25s ease;
      }

      nav ul li a:hover {
        color: #000;
      }

      nav ul li ul.dropdown {
        position: absolute;
        top: 100%;
        left: 0;
        background: #f0f0f0;
        border: 1px solid #ccc;
        border-radius: 6px;
        min-width: 160px;
        display: none;
        flex-direction: column;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        padding: 5px 0;
      }

      nav ul li:hover > ul.dropdown {
        display: flex;
      }

      nav ul li ul.dropdown li {
        width: 100%;
        margin: 0;
      }

      nav ul li ul.dropdown li a {
        display: block;
        padding: 10px 16px;
        color: #333;
        font-weight: 500;
        width: 100%;
        box-sizing: border-box;
        transition: background 0.3s ease, color 0.3s ease;
      }

      nav ul li ul.dropdown li a:hover {
        background: white;
        color: #000;
      }

      nav > ul > li > a::after {
        content: '';
        position: absolute;
        width: 0;
        height: 2px;
        bottom: -2px;
        left: 0;
        background-color: currentColor;
        transition: width 0.3s ease;
      }

      nav > ul > li > a:hover::after {
        width: 100%;
      }

      main {
        padding: 40px 20px;
        max-width: 600px;
        margin: 40px auto;
        background: rgba(0, 0, 0, 0.6);
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
      }

      h2 {
        text-align: center;
        margin-bottom: 25px;
      }

      form label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
      }

      form input, form select, form textarea {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border-radius: 5px;
        border: none;
        font-size: 16px;
        background: rgba(255, 255, 255, 0.2);
        color: white;
      }

      form select option {
        color: black;
      }

      form button {
        width: 100%;
        padding: 12px;
        background: #3273a8;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: background 0.3s ease;
      }

      form button:hover {
        background: #205b8a;
      }
    </style>
  </head>
  <body>
    <nav>
      <div><p>Welcome, <%= user.Username %></p></div>
      <ul>
        <li><a href="/index">Home</a></li>
        <li>
          <a href="#">Categories ▼</a>
          <ul class="dropdown">
            <% categories.forEach(cat => { %>
              <li><a href="/category/<%= cat.ID %>"><%= cat.Name %></a></li>
            <% }) %>
          </ul>
        </li>
        <li><a href="/sell">Sell</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </nav>

    <main>
      <form action="/sell" method="POST">
        <h2>Sell a Product</h2>

        <label for="name">Product Name</label>
        <input type="text" name="name" id="name" required />

        <label for="price">Price (€)</label>
        <input type="number" name="price" id="price" step="0.01" required />

        <label for="description">Description</label>
        <textarea name="description" id="description" rows="4" placeholder="Optional description..."></textarea>

        <label for="categoryID">Category</label>
        <select name="categoryID" id="categoryID" required>
          <option disabled selected>Select a category</option>
          <% categories.forEach(cat => { %>
            <option value="<%= cat.ID %>"><%= cat.Name %></option>
          <% }) %>
        </select>

        <button type="submit">Sell Product</button>
      </form>
    </main>
  </body>
</html>
