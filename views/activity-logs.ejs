<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet" />
    <title>Activity Logs</title>
    <style>
      body::-webkit-scrollbar {
        display: none;
      }
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background: white url('/Images/background.png') no-repeat center center fixed;
        background-size: cover;
        color: white;
        min-height: 100vh;
      }

      nav {
        position: sticky;
        top: 0;
        background: #f0f0f0;
        padding: 10px 20px;
        border-bottom: 1px solid #ccc;
        color: #333;
        display: flex;
        justify-content: space-between;
        align-items: center;
        z-index: 1000;
      }
      nav div p {
        margin: 0;
        font-weight: bold;
        font-size: 1.1rem;
      }
      nav a {
        color: #333;
        margin-left: 15px;
        text-decoration: none;
        position: relative;
        font-weight: 600;
        transition: color 0.25s ease;
      }
      nav a:hover {
        color: #000;
      }
      nav a::after {
        content: "";
        position: absolute;
        width: 0;
        height: 2px;
        left: 0;
        bottom: -3px;
        background: currentColor;
        transition: width 0.25s ease;
      }
      nav a:hover::after {
        width: 100%;
      }

      main {
        padding: 20px;
        margin: 20px auto;
        max-width: 1060px;
        background: rgba(0, 0, 0, 0.6);
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
      }

      form.filter-form {
        margin-bottom: 20px;
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
        align-items: center;
      }
      form.filter-form label {
        font-weight: 600;
        min-width: 50px;
      }
      form.filter-form select,
      form.filter-form input[type="text"] {
        padding: 10px 14px;
        font-size: 1rem;
        border: none;
        border-radius: 4px;
        background: rgba(255, 255, 255, 0.15);
        color: white;
        transition: background 0.3s ease;
        min-width: 180px;
      }
      form.filter-form select option {
        color: black;
      }
      form.filter-form input[type="text"]::placeholder {
        color: rgba(255, 255, 255, 0.7);
      }
      form.filter-form input[type="text"]:focus,
      form.filter-form select:focus {
        outline: none;
        background: rgba(255, 255, 255, 0.3);
      }
      form.filter-form button {
        padding: 10px 18px;
        font-size: 1rem;
        cursor: pointer;
        background: #555;
        border: none;
        border-radius: 4px;
        color: white;
        font-weight: 600;
        transition: background 0.3s ease;
      }
      form.filter-form button:hover {
        background: #333;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        background: rgba(255, 255, 255, 0.15);
        color: white;
        border-radius: 6px;
        overflow: hidden;
      }
      thead {
        background: rgba(255, 255, 255, 0.25);
      }
      th, td {
        padding: 12px 16px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        text-align: left;
        font-size: 1rem;
      }
      tbody tr:hover {
        background: rgba(255, 255, 255, 0.1);
      }

      .pagination {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 25px;
        justify-content: center;
      }
      .pagination a {
        padding: 8px 14px;
        border-radius: 4px;
        border: 1px solid white;
        text-decoration: none;
        color: white;
        font-weight: 600;
        transition: background-color 0.3s ease, color 0.3s ease;
      }
      .pagination a:hover {
        background-color: white;
        color: black;
      }
      .pagination .active {
        background-color: white;
        color: black;
        pointer-events: none;
      }
      .clear-logs-btn {
        padding: 10px 18px;
        font-size: 1rem;
        cursor: pointer;
        background: #555;
        border: none;
        border-radius: 4px;
        color: white;
        font-weight: 600;
        transition: background 0.3s ease;
      }
      .clear-logs-btn:hover {
        background: #333;
      }
    </style>
  </head>
  <body>
    <nav>
      <div><p>Admin Panel</p></div>
      <div>
        <a href="/admin">Admin Dashboard</a>
        <a href="/admin/users">User Management</a>
        <a href="/admin/products">Product Management</a>
        <a href="/admin/activity-logs">Activity Logs</a>
        <a href="/logout">Logout</a>
      </div>
    </nav>

    <main>
      <h1>Activity Logs</h1>

      <form method="GET" action="/admin/activity-logs" class="filter-form">
        <label for="userId">User:</label>
        <select name="userId" id="userId">
          <option value="">All</option>
          <% users.forEach(user => { %>
            <option value="<%= user.ID %>" <%= userIdFilter == user.ID ? 'selected' : '' %>><%= user.Username %></option>
          <% }) %>
        </select>

        <label for="action">Action:</label>
        <input
          type="text"
          id="action"
          name="action"
          placeholder="Filter by action"
          value="<%= actionFilter %>"
        />

        <button type="submit">Filter</button>
      </form>
      </form>
      <div style="display: flex; align-items: center; margin-bottom: 20px;">
        <form action="/admin/activity-logs/clear" method="POST" onsubmit="return confirm('Are you sure you wanna delete the logs?');" style="margin-left: 0;">
          <button type="submit" class="clear-logs-btn">Clear Logs</button>
        </form>
      </div>
      <table>
        <thead>
          <tr>
            <th>User</th>
            <th>Action</th>
            <th>Details</th>
            <th>Timestamp</th>
          </tr>
        </thead>
        <tbody>
          <% if (logs.length === 0) { %>
            <tr><td colspan="4" style="text-align:center;">No logs found.</td></tr>
          <% } else { %>
            <% logs.forEach(log => { %>
              <tr>
                <td><%= log.Username || 'Unknown' %></td>
                <td><%= log.Action %></td>
                <td><%= log.Details || '-' %></td>
                <td><%= new Date(log.Timestamp).toLocaleString() %></td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>

      <% if (totalPages > 1) { %>
        <div class="pagination">
          <% for (let i = 1; i <= totalPages; i++) { %>
            <a href="/admin/activity-logs?<%= `page=${i}&userId=${userIdFilter}&action=${actionFilter}` %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
          <% } %>
        </div>
      <% } %>
    </main>
  </body>
</html>
